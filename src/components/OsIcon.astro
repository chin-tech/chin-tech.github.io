---
// src/components/OsIcon.astro
import { Icon } from 'astro-icon/components';

interface Props {
  osType: string;
  class?: string;
}

const { osType = "", class: className } = Astro.props;

let iconName = "";
let isLinux = false;

if (osType.toLowerCase().includes("linux")) {
    iconName = "linux";
    isLinux = true;
}
if (osType.toLowerCase().includes("windows")) iconName = "windows";
if (osType.toLowerCase().includes("bsd")) iconName = "freebsd";
---

{iconName && (
  <Icon 
    name={iconName} 
    class:list={[
      "inline-block mr-2 transition-all duration-300", 
      // If it's Linux, we scale it up slightly and add a subtle glow/shadow
      isLinux ? "scale-125 brightness-110 drop-shadow-[0_0_2px_rgba(255,255,255,0.2)]" : "scale-100",
      className
    ]} 
  />
)}
